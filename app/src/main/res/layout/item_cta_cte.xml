<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/id_saldo_inicial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/descripcion_saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_start"
            android:layout_toStartOf="@id/saldo"
            android:text="Saldo"
            android:textSize="@dimen/tamanio_texto"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_start"
            android:layout_alignParentEnd="true"
            android:text="TextView"
            android:textSize="@dimen/tamanio_texto"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/id_cta_cte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/tipo_cta_cte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop= "@dimen/margin_start"
            android:layout_alignParentStart="true"
            android:padding="2dp"
            android:src="@drawable/icono_sector" />

        <RelativeLayout
            android:id="@+id/datos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/margin_top_texto"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/tipo_cta_cte"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_start"
                android:layout_alignParentStart="true"
                android:text="TextView"
                android:textSize="@dimen/tamanio_texto"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/debe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_start"
                android:layout_alignParentEnd="true"
                android:textColor="@color/suspender"
                android:text="TextView"
                android:textSize="@dimen/tamanio_texto"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/haber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_start"
                android:layout_alignParentEnd="true"
                android:text="TextView"
                android:textColor="@color/teal_200"
                android:textSize="@dimen/tamanio_texto"
                android:textStyle="bold" />



        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/datos2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="5dp"
            android:layout_toEndOf="@id/tipo_cta_cte"
            android:layout_below="@id/datos"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/fecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignParentEnd="true"
                android:text="TextView"
                android:textSize="@dimen/tamanio_texto" />

        </RelativeLayout>

    </RelativeLayout>
    <View
        android:id="@+id/divider_acerca"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/id_cta_cte"
        android:background="@android:color/white"
        android:layout_marginTop="@dimen/margin_boton"
/>

</RelativeLayout>